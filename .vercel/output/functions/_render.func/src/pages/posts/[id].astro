---
import { db, Posts, eq } from 'astro:db';
import Layout from '../../layouts/Layout.astro';

export const prerender = false; // necesario para rutas din√°micas

const id = Number(Astro.params.id);

// Verificar que el ID es v√°lido
if (Number.isNaN(id)) {
  return Astro.redirect('/');
}

let post: any = null;
let dbError = false;

try {
  // Obtener el post
  post = await db.select().from(Posts).where(eq(Posts.id, id)).get();
} catch (error) {
  console.error('Error accessing database:', error);
  dbError = true;
}

// Si el post no existe y no hay error de DB, redirigir al inicio
if (!post && !dbError) {
  return Astro.redirect('/');
}
---

<Layout title={post?.title || 'Post no encontrado'}>
  {dbError ? (
    <div class="card">
      <div class="alert alert-error">
        ‚ö†Ô∏è Error conectando con la base de datos. Por favor, int√©ntalo m√°s tarde.
      </div>
      <a href="/" class="btn btn-secondary">‚Üê Volver al inicio</a>
    </div>
  ) : post ? (
    <article class="card">
      <div class="post-header">
        <div class="breadcrumb">
          <a href="/" class="btn btn-secondary">‚Üê Volver al inicio</a>
        </div>
        
        <h1 class="post-title">{post.title}</h1>
        
        <div class="post-meta">
          <span class="post-date">
            üìÖ Publicado el {new Date(post.published).toLocaleDateString('es-ES', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric',
              hour: '2-digit',
              minute: '2-digit'
            })}
          </span>
        </div>
        
        <div class="post-actions">
          <a href={`/edit/${post.id}`} class="btn btn-primary">
            ‚úèÔ∏è Editar Post
          </a>
        </div>
      </div>
      
      <div class="post-content">
        {post.content.split('\n').map((paragraph: string) => (
          paragraph.trim() && <p>{paragraph}</p>
        ))}
      </div>
    </article>
  ) : (
    <div class="card">
      <h1>Post no encontrado</h1>
      <p>El post que buscas no existe.</p>
      <a href="/" class="btn btn-secondary">‚Üê Volver al inicio</a>
    </div>
  )}

  <style>
    /* Estilos completos para la p√°gina de ver post */
    .btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 500;
      font-size: 0.875rem;
      transition: all 0.2s ease;
      cursor: pointer;
      border: none;
      font-family: inherit;
    }

    .btn-primary {
      background: var(--primary, #6366f1);
      color: white;
    }

    .btn-primary:hover {
      background: var(--primary-dark, #4f46e5);
      transform: translateY(-1px);
      box-shadow: var(--shadow-lg, 0 10px 15px -3px rgb(0 0 0 / 0.1));
    }

    .btn-secondary {
      background: var(--secondary, #f1f5f9);
      color: var(--text, #1e293b);
      border: 1px solid var(--border, #e2e8f0);
    }

    .btn-secondary:hover {
      background: #e2e8f0;
      transform: translateY(-1px);
    }

    .card {
      background: var(--bg, #ffffff);
      border-radius: 16px;
      padding: 2rem;
      box-shadow: var(--shadow-lg, 0 10px 15px -3px rgb(0 0 0 / 0.1));
      border: 1px solid var(--border, #e2e8f0);
    }

    .post-header {
      border-bottom: 1px solid var(--border, #e2e8f0);
      padding-bottom: 2rem;
      margin-bottom: 2rem;
    }
    
    .breadcrumb {
      margin-bottom: 1.5rem;
    }
    
    .post-title {
      font-size: 2.5rem;
      font-weight: 800;
      color: var(--text, #1e293b);
      margin-bottom: 1rem;
      line-height: 1.2;
    }
    
    .post-meta {
      margin-bottom: 1.5rem;
    }
    
    .post-date {
      color: var(--text-light, #64748b);
      font-size: 1rem;
    }
    
    .post-actions {
      display: flex;
      gap: 0.75rem;
    }
    
    .post-content {
      font-size: 1.125rem;
      line-height: 1.7;
      color: var(--text, #1e293b);
    }
    
    .post-content p {
      margin-bottom: 1.5rem;
    }
    
    .post-content p:last-child {
      margin-bottom: 0;
    }
    
    @media (max-width: 768px) {
      .post-title {
        font-size: 2rem;
      }
      
      .post-content {
        font-size: 1rem;
      }
      
      .card {
        padding: 1.5rem;
      }
    }
  </style>
</Layout>